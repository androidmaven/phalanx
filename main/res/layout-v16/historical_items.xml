<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PPR_FULL_WHITE"
        android:padding="16dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/PPR_FULL_BLACK"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/history_title"
                android:text="Malaria and typhoid treatment"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/history_cost"
                android:text="#20,000 medical cost"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/history_hospital"
                android:text="Oriental medical hospital"/>
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/history_date"
                android:text=" 4 days ago, 12th July 2018."/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle_green_24dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:id="@+id/checkers"/>
    </LinearLayout>

</android.support.v7.widget.CardView>