<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PPR_FULL_WHITE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="60sp"
            android:textColor="@color/PPR_FULL_BLACK"
            android:textStyle="bold"
            android:text="Phalanx"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Your finger, your data, your health."/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="end"
         android:gravity="center"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="16dp"
            android:drawableLeft="@drawable/ic_sync_black_24dp"
             android:drawableStart="@drawable/ic_sync_black_24dp"
             android:drawablePadding="16dp"
             android:layout_margin="16dp"
             android:id="@+id/sync"
             android:background="@drawable/grey_gradient"
             android:textColor="@color/PPR_FULL_BLACK"
             android:textStyle="bold"
             android:text="Synchronize"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="16dp"
             android:drawableStart="@drawable/ic_email_black_24dp"
             android:drawableLeft="@drawable/ic_email_black_24dp"
             android:gravity="center"
             android:id="@+id/contact"
             android:drawablePadding="8dp"
             android:layout_gravity="center"
             android:layout_margin="16dp"
             android:background="@drawable/grey_gradient"
             android:textColor="@color/PPR_FULL_BLACK"
             android:textStyle="bold"
             android:text="Contact phalanx"/>
     </LinearLayout>


       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="20dp"
           app:cardElevation="10dp"
           android:layout_margin="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/registerNew"
            android:background="@drawable/purple_gradient"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register new patient"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/PPR_FULL_WHITE"
                android:paddingBottom="4dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For someone is new to the phalanx ecosystem. Register their biometric data, collate their profile."
                android:textSize="16sp"
                android:textColor="@color/PPR_FULL_WHITE"
                android:paddingBottom="4dp"
                android:gravity="center"/>
        </LinearLayout>
       </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/attendPatient"
                android:background="@drawable/orange_gradient"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attend to patient"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/PPR_FULL_WHITE"
                    android:paddingBottom="4dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Access patient's historical health records, attend to patient, add new medical operation information."
                    android:textSize="16sp"
                    android:textColor="@color/PPR_FULL_WHITE"
                    android:paddingBottom="4dp"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_margin="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/paymentId"
                android:background="@drawable/red_gradient"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet and payment"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/PPR_FULL_WHITE"
                    android:paddingBottom="4dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See your wallet balance and load your wallet with PHX using credit card to gain biometric verification access."
                    android:textSize="16sp"
                    android:textColor="@color/PPR_FULL_WHITE"
                    android:paddingBottom="4dp"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
